@model Ambrosium.Models.Estabelecimento

@{
    ViewBag.Title = "Ambrosium | " + Model.nome;
}

<!-- Main -->

	<div class="col-sm-12">
		<div class="col-xs-12 profile-title-container">
			Ambrosium
		</div>

	</div>

	<div style="color:black;padding-bottom:50px;margin-bottom:0px;"  class="col-xs-12 profile-sections-container">
		<a href="#">
			<div class="col-xs-offset-2 col-xs-2 profile-section">
				Restaurante
			</div>
		</a>
		<a href="~/Estabelecimentos/Menus/@Model.id">
			<div class="col-xs-offset-1 col-xs-2 profile-section">
				Menus
			</div>
		</a>
		<a href="~/Estabelecimentos/Galeria/@Model.id">
			<div class="col-xs-offset-1 col-xs-2 profile-section">
				Galeria
			</div>
		</a>
	</div>


	<div style="color:black;" class="col-xs-12">
		<div class="col-xs-offset-1 col-xs-8 name-container">
				@Model.nome
		</div>
		<div class="col-xs-5 col-xs-offset-1">
			<div class="col-md-12">
				<div class="col-sm-12 restaurant-desc">
				    @Model.descricao
                    
                </div>
				<div class="col-xs-12">
                    <textarea name="comment" rows="4" cols="60" placeholder="Fale nós da sua experiencia" required></textarea>
				</div>
                <div class="col-xs-12">
                    <button class="col-xs-6 text-but-l" type="submit">Submeter</button>
                </div>
			</div>
		</div>
		<div class="col-md-offset-2 col-md-4">
			<div class="rest-class">
				Rating: 
                @{
                    decimal d = (decimal) Model.rating;
                    @d.ToString("0.00");
                }
				<i class="fa fa-star" aria-hidden="true"></i>
			</div>
			<div>
				<img style="margin-bottom:50px;" class="rest-map" src="~/Content/images/icon.png"/>
			</div>
		</div>
	

	</div>