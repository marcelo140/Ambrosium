@model Ambrosium.Models.Sugestao_Produto

@{
    ViewBag.Title = "Edit";
}



<div class="col-sm-offset-1 col-sm-10 add-sugestao-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <h4>Adicionar Produto</h4>
            <hr />

            <div class="col-md-6" style="margin-top:20px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="margin-top:10px;">
                    @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12" style="margin:20px;">
                    <select class=" col-md-6 regime-dropdown">
                        <option class="drop-text" value="None">Regime</option>
                        <option class="drop-text" value="Qualidade">Vegetariano</option>
                        <option class="drop-text" value="Classificação">Carnivero</option>
                        <option class="drop-text" value="Distancia">Omnivero</option>
                    </select>
                </div>
                <div class="add-photo-text col-xs-6">
                    Adicionar foto
                </div>
                <div class="col-sm-6">
                    <input type="file" id="picFile" class="login-button" value="Choose File">
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-8">
                    <div class="color2 input-group input-preference">
                        <input id="transcript" type="text" class=" text-recon" placeholder="Ingredientes" required>
                        <span class="input-group-btn">
                            <button class="btn btn-secondary submit-preference" type="submit" href="">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-sm-12 name-container">
                    Ingredientes Registados:
                    <div class="preferences-box">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-xs-offset-2 col-sm-3">
                    <input type="button" onclick="uploadFile()" class="login-button" value="Submeter">
                </div>
                <div class="col-sm-3">
                    <input type="button" onclick="uploadFile()" class="login-button" value="Cancelar">
                </div>
            </div>
        </div>
    }
</div>

<script>
    function uploadFile() {
        var x = document.getElementById("picFile");
        x.disabled = true;
    }
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
