@model Ambrosium.Models.Sugestao_Produto

@{
    ViewBag.Title = "Edit";
}



<div class="col-sm-offset-1 col-sm-10 add-sugestao-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <h4>Editar Produto</h4>
            <hr />

            <div class="col-sm-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="add-photo-text">
                    Adicionar foto
                </div>
                <div class="col-sm-12">
                    <div class="col-md-6">
                        <button style="background-color:#C1AF73;color:black;" class="pic-updator">Inserir nova imagem</button>
                    </div>

                    <select class=" col-md-6 regime-dropdown">
                        <option class="drop-text" value="None">Regime</option>
                        <option class="drop-text" value="Qualidade">Vegetariano</option>
                        <option class="drop-text" value="Classificação">Carnivero</option>
                        <option class="drop-text" value="Distancia">Omnivero</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-8">
                    <div class="color2 input-group input-preference">
                        <input id="transcript" type="text" class="text-recon" placeholder="Ingredientes" required>
                        <span class="input-group-btn">
                            <button class="btn btn-secondary submit-preference" type="submit" href="">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-sm-12 name-container">
                    Ingredientes Registados:
                    <div class="preferences-box">
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <button style="background-color:#C1AF73;color:black;" class="pic-updator" type="submit">Aceitar</button>
            </div>
            <div class="col-sm-2">
                <button style="background-color:#C1AF73;color:black;" class="pic-updator" type="submit">Cancelar</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
